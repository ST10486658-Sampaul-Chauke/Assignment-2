<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".MainActivity"
    android:textSize="30sp">

//Text to display the welcome to VeriFi app
    <TextView
        android:id="@+id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="Welcome to VeriFi!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325"
        android:textSize="30sp"
        />
//Display the following text
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test your knowledge with these fun flashcards"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="301dp"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="30sp"
        />
// Dedicated to Starting the app
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="423dp"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="30sp"
        />
// Dedicated to Exiting the app
    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="561dp"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="30sp"
        />

</LinearLayout>